extends layout

block main
    section.namecard(class='namecard')
        .namecard-login
            if name
                p.namecard-greeting Welcome, #{name}!
                form.namecard-form(action='/goodbye', method='POST')
                    button(type='submit')
                        img(src='/static/img/close.svg')
            else
                p.namecard-greeting Hello, student!
        block intro
    block card
